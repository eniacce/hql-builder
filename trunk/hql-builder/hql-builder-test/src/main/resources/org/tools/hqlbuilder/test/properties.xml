<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
	"http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans default-autowire="autodetect">

	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
		scope="singleton" autowire-candidate="false">
		<property name="locations">
			<list>
				<value>classpath:org/tools/hqlbuilder/test/hibernate.properties</value>
			</list>
		</property>
		<property name="localProperties">
			<bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="properties">
					<props>
						<prop key="hibernate.cfg.xml">org/tools/hqlbuilder/test/hibernate.cfg.xml</prop>
					</props>
				</property>
			</bean>
		</property>
	</bean>

</beans>
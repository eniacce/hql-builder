<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 3.0//EN" "http://www.springframework.org/dtd/spring-beans-3.0.dtd">  
<beans>

	<bean id="propertyPlaceholderConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer" scope="singleton">
		<property name="locations">
			<list>
				<value>classpath:org/tools/hqlbuilder/test/hibernate.properties</value>
			</list>
		</property>
		<property name="properties">
			<bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
				<property name="properties">
					<props>
						<prop key="hibernate.cfg.xml">org/tools/hqlbuilder/test/hibernate.cfg.xml</prop>
					</props>
				</property>
			</bean>
		</property>
	</bean>

</beans>